<% content_for :title do %>
    <%= @contact.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_contacts.backend_contacts_path %>">
    <i class="icon-users"></i> <%= t('.contacts') %>
    </a> / <%= @contact.name %>
<% end %>

<% content_for :page_toolbar do %>
        <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @contact.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', contact: @contact %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>