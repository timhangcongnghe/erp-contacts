<% content_for :title do %>
    <%= @contact_group.name %>
<% end %>

<% content_for :page_title do %>    
    <a href="<%= erp_contacts.backend_contact_groups_path %>">
    <i class="fa fa-users"></i> <%= t('.contact_groups') %>
    </a> / <%= @contact_group.name %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_contacts.new_backend_contact_group_path,
        class: 'btn-sm'
    }) %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @contact_group.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', contact_group: @contact_group %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>